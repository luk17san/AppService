@model TestAppService.Models.Advertisment

@{
    ViewBag.Title = "Index_Ad";
}

<h2>Index_Ad</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Advertisment</h4>
        <hr />
       
        <div class="col-md-9">
            <h4>Checkbox</h4>
            <div class="col-md-5">
                <ul class="list-group">
                    @foreach (var item in ViewBag.qlist)
                    {
                        <li class="list-group-item">
                            <div class="checkbox">
                                <input type="checkbox" id="Check_@item.Question_ID" checked="@item.IsAvailable"/>
                                <label for="Check_@item.Question_ID">@item.Q_Name</label>
                            </div>

                        </li>
                    }
                </ul>
            </div>
        </div>



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ad_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ad_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ad_Budget, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad_Budget, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad_Budget, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Ad")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
