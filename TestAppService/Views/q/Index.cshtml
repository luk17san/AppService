@model TestAppService.Models.ViewModel.AdViewModel

@{
    ViewBag.Title = "Index";
}

<h4>Pytania pomocnicze</h4>


@foreach (var item in Model.QuestionsIE)
{



    <div class="form-horizontal">
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.Name)

            @Html.DropDownList("AnswerID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.Answers.AnswerID, "", new { @class = "text-danger" })

        </div>
    </div>

}

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</div>