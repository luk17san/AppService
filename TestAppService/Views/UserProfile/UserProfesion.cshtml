@model TestAppService.Models.Extended.UserViewModel

@{
    ViewBag.Title = "Edit";
}

@if (Session["UserId"] != null)
{
    <h3>user id= @Session["UserId"].ToString()</h3>
}

    <h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.UserVM, "Profesions", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @for (int i = 0; i < Model.UserVM.Count(); i++)
                {
                    @Html.EditorFor(m => Model.UserVM[i].IsChecked)
                    @Html.DisplayFor(m => Model.UserVM[i].Name)
                    @Html.HiddenFor(m => Model.UserVM[i].Name)
                    @Html.HiddenFor(m => Model.UserVM[i].Id)
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

